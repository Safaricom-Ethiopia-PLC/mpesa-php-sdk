{
    "name": "Safaricom-Ethiopia-PLC/mpesa-php-sdk",
    "description": "A PHP SDK for M-PESA API integration",
    "type": "library",
    "require": {
        "php": "^7.4|^8.0",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.0",
        "ramsey/uuid": "^4.7"
    },
    "autoload": {
        "psr-4": {
            "Mpesa\\Sdk\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Safaricom Ethiopia",
            "email": "zelalem.gizachew@safaricom.et"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Mpesa\\Sdk\\MpesaServiceProvider"
            ]
        }
    }
}